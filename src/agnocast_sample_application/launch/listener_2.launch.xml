<launch>
    <node_container pkg="agnocastlib" exec="agnocast_component_container" name="talker_2_container" namespace="" output="screen">
      <env name="LD_PRELOAD" value="libagnocast_heaphook.so:$(env LD_PRELOAD '')" />
      <env name="AGNOCAST_MEMPOOL_SIZE" value="16777216" /> <!-- 16MB-->

      <composable_node pkg="agnocast_sample_application" plugin="MyTopic2Subscriber" name="my_topic_2_subscriber_node" namespace="">
      </composable_node>
    </node_container>
</launch>